@using EPiServer.Framework.Web.Resources
@using EPiServer.Shell.Web.Mvc.Html
@inherits System.Web.Mvc.WebViewPage<Dc.EpiServerOrderPlugin.Controllers.OrderIntegrationViewModel>

@{
    Layout = null;
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en">
<head>
    <title>Order Integration</title>
    <meta http-equiv="X-UA-Compatible" content="IE=Edge" />
    <!-- Shell -->
    @Html.Raw(ClientResources.RenderResources("ShellCore"))
    <!-- LightTheme -->
    @Html.Raw(ClientResources.RenderResources("ShellCoreLightTheme"))
    <link href="../../../../App_Themes/Default/Styles/system.css" type="text/css" rel="stylesheet">
    <link href="../../../../App_Themes/Default/Styles/ToolButton.css" type="text/css" rel="stylesheet">
</head>
<body id="body">
    @Html.Raw(Html.ShellInitializationScript())
    <form action="/DcOrderPlugin/Index" method="post">
        <div class="epi-contentContainer epi-padding">
            <div class="epi-contentArea">
                <h1 class="EP-prefix">
                    Order Integration<a onclick="window.open(&#39;http://webhelp.episerver.com/16-9/EpiserverUserGuide_csh.htm#indexcontent&#39;,&#39;_blank&#39;, &#39;scrollbars=yes, height=500, location=no, menubar=no, resizable=yes, toolbar=no, width=840&#39;);return false;" title="Help" href="http://webhelp.episerver.com/16-9/EpiserverUserGuide_csh.htm#indexcontent" target="_blank"><img class="EPEdit-CommandTool" align="absmiddle" src="/App_Themes/Default/Images/Tools/Help.png" border="0" alt="Help" /></a>
                </h1><p class="EP-systemInfo">This tool manages app settings about the order rest api.</p>
                <div id="FullRegion_ValidationSummary" class="EP-validationSummary" style="color:Black;display:none;"></div>
            </div>
            <div class="epi-contentArea epi-formArea">
                <table class="table table-bordered">
                    <tr><th>Feature</th><th>Value</th></tr>
                    <tr><td>URL</td><td><input name="Url" id="url" value="@Model.Url"/></td></tr>
                    <tr><td>Resource</td><td><input name="Resource" id="resourcer" value="@Model.Resource" /></td></tr>
                    <tr><td>API Key</td><td><input name="ApiKey" id="apikey" value="@Model.ApiKey" /></td></tr>
                </table>
                Changing app settings will require the website to restart.
                <div class="epi-buttonDefault">
                    <span class="epi-cmsButton">
                        <input class="epi-cmsButton-text epi-cmsButton-tools epi-cmsButton-Refresh" type="submit" name="save" id="save" value="Save"/>
                    </span>
                </div>
            </div>
        </div>
    </form>
</body>
</html>